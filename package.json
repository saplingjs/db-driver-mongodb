{
  "name": "@sapling/db-driver-mongodb",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "description": "MongoDB driver for Sapling",
  "type": "module",
  "keywords": [
    "mongodb",
    "sapling",
    "saplingjs",
    "database",
    "driver"
  ],
  "homepage": "https://www.saplingjs.com",
  "bugs": "https://github.com/saplingjs/db-driver-mongodb/issues",
  "author": {
    "name": "Oskari Groenroos",
    "email": "oskari@groenroos.fi",
    "url": "https://www.groenroos.fi"
  },
  "dependencies": {
    "mongodb": "^3.6.5"
  },
  "peerDependencies": {
    "@sapling/sapling": "^0.1.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint-fix": "xo --fix",
    "lint": "xo",
    "test": "nyc ava",
    "test:report": "nyc --reporter=lcov npm test",
    "test:send": "npx codecov"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.10",
    "ava": "^3.15.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "nyc": "^15.1.0",
    "xo": "^0.39.1"
  },
  "xo": {
    "ignores": [
      "drivers/db/Interface.js",
      "drivers/render/Interface.js",
      "node_modules/**/*.*",
      "test/**/*.*"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    },
    "rules": {
      "max-params": [
        "warn",
        {
          "max": 6
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 2
        }
      ],
      "no-await-in-loop": "off",
      "no-new": "off",
      "no-return-await": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/**/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(*test).js": [
      "npm run lint"
    ]
  }
}
